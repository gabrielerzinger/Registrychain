<% include ./partials/header %>
<div class="container" style="position: relative; width: 100%; height: 100%;">
	<form class="form-width vertical-center" action="/c2c" method="POST">
		<% if(Swalflag){ %>
			<script type="text/javascript">
				sweetAlert("Ooops!","<%= message %>", "error");
			</script>
		<% } %>
		<div class="form-group">
			<p>Usuário logado: </p>
			<p>Você é:</p>
			<div class="form-check">
				<input class="form-check-input" type="radio" name="check" id="checkContratante" value="contratante" checked>
				<label class="form-check-label" for="checkContratante">Contratante</label>
			</div>
			<div class="form-check">
				<input class="form-check-input" type="radio" name="check" id="checkContratando" value="contratando">
				<label class="form-check-label" for="checkContratando">Contratando</label>
			</div>
		</div>
		<div class="form-group">
			<label for="contraparte">CPF Contraparte</label>
			<input type="text" class="form-control" name="contraparte" id="contraparte" placeholder="CPF">
		</div>
		<div class="form-group">
			<label for="descricao">Descrição do contrato</label>
			<textarea class="form-control" name="descricao" id="descricao" rows="5"></textarea>
		</div>
		<button type="submit" class="btn btn-primary">Enviar</button>
	</form>
</div>
<% include ./partials/footer %>
